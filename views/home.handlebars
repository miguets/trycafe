<div class="container">
    <div class="center-align">
        <h1>Nuestros Productos</h1>
    </div>
</div>
    <!-- Row para las tarjetas -->
    <div class="row">
        {{#each products}}
        <div class="col s12 m4 l3"> <!-- Ajustar el número de columnas según el tamaño de pantalla -->
            <div class="card">
                <div class="card-image">
                    <img src="/media/cdlogo.png" class="responsive-img"> <!-- Imagen ajustada -->
                </div>
                <div class="card-content">
                    <h4>{{name}} - ${{price}}</h4>
                </div>
                <div class="card-action">
                    <form action="/add-to-cart" method="POST">
                        <input type="hidden" name="productId" value="{{id}}">
                        <button class="btn blue" type="submit"><i class="material-icons white-text">add_shopping_cart</i>Al carrito</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    
    <!-- Enlace al carrito -->
    <a href="/cart">Ver carrito</a>


